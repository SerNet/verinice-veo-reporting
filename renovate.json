{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeAll",
    ":automergePr"
  ],
  "reviewers": [
    "JJ",
    "JK"
  ],
  "assignAutomerge": true,
  "packageRules": [
    {
      "groupName": "OpenHTMLtoPDF",
      "matchPackageNames": [
        "/^io.github.openhtmltopdf:/"
      ]
    },
    {
      "groupName": "ph-fonts",
      "matchPackageNames": [
        "/^com.helger.font:/"
      ]
    },
    {
      "groupName": "Spotless",
      "postUpgradeTasks": {
        "commands": [
          "./gradlew spotlessApply"
        ],
        "fileFilters": [
          "**/*"
        ]
      },
      "matchPackageNames": [
        "/^com.diffplug.spotless/"
      ]
    },
    {
      "groupName": "Batik",
      "matchPackageNames": [
        "/^org.apache.xmlgraphics:batik/"
      ]
    },
    {
      "groupName": "flexmark-java",
      "matchPackageNames": [
        "/^com.vladsch.flexmark:/"
      ]
    },
    {
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "allowedVersions": "25-jdk"
    }
  ]
}
